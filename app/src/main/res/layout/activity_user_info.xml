<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context="org.pceindicator.com.UserInfo">
    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinnerYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>
    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinnerBranch"
        android:layout_width="match_parent"
        android:layout_below="@+id/spinnerYear"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>
    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinnerDivision"
        android:layout_below="@+id/spinnerBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>
    <Button
        android:id="@+id/submit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/google_sign_button"
        android:padding="16dp"
        android:text="Submit"
        android:textColor="#ffffff" />
</RelativeLayout>
